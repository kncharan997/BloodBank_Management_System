@model BloodBankManagementSystem.Models.BloodDonor

<h2 class="page-title">Delete Donor</h2>

<div class="content-box">
    <p class="delete-message">
        Are you sure you want to delete the donor <strong>@Model.Name</strong>?
    </p>

    <form method="post" class="btn-group">
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>

<style>
    /* Page Title */
    .page-title {
        text-align: center;
        color: floralwhite;
        background-color: darkred;
        padding: 14px;
        border-radius: 8px;
        font-size: 1.8rem;
        font-weight: bold;
        letter-spacing: 1px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
    }

    /* Content Box */
    .content-box {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 25px;
        max-width: 500px;
        text-align: center;
        margin-left: auto;
        margin-right: auto;
        border-left: 5px solid darkred;
    }

    /* Delete Message */
    .delete-message {
        font-size: 1.2rem;
        color: #333;
        font-weight: 500;
        margin-bottom: 20px;
    }

    /* Button Group */
    .btn-group {
        display: flex;
        justify-content: center;
        gap: 12px;
        margin-top: 10px;
    }

    /* Buttons */
    .btn {
        padding: 10px 18px;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 6px;
        text-transform: uppercase;
        transition: all 0.3s ease-in-out;
        text-decoration: none;
        text-align: center;
        display: inline-block;
        cursor: pointer;
        border: none;
        box-shadow: 2px 3px 8px rgba(0, 0, 0, 0.15);
    }

    .btn-danger {
        background-color: #d9534f;
        color: white;
        border: 1px solid #d43f3a;
    }

        .btn-danger:hover {
            background-color: #c9302c;
            transform: scale(1.05);
        }

    .btn-secondary {
        background-color: #5cb85c;
        color: white;
        border: 1px solid #4cae4c;
    }

        .btn-secondary:hover {
            background-color: #4cae4c;
            transform: scale(1.05);
        }
</style>