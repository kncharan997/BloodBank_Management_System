@model BloodBankManagementSystem.Models.Hospital

<h2 class="page-title">Add Hospital</h2>

<div class="content-box">
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="City"></label>
            <select asp-for="City" class="form-control" required>
                <option value="">Select City</option>
                <option value="Mumbai">Mumbai</option>
                <option value="Delhi">Delhi</option>
                <option value="Bangalore">Bangalore</option>
                <option value="Hyderabad">Hyderabad</option>
                <option value="Chennai">Chennai</option>
                <option value="Kolkata">Kolkata</option>
                <option value="Pune">Pune</option>
                <option value="Ahmedabad">Ahmedabad</option>
                <option value="Jaipur">Jaipur</option>
                <option value="Surat">Surat</option>
            </select>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Contact"></label>
            <input asp-for="Contact" class="form-control" required />
            <span asp-validation-for="Contact" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BloodBankID"></label>
            <select asp-for="BloodBankID" class="form-control" required>
                <option value="">-- Select Blood Bank --</option>
                @foreach (var bloodBank in ViewBag.BloodBanks)
                {
                    <option value="@bloodBank.BloodBankID">@bloodBank.Name</option>
                }
            </select>
            <span asp-validation-for="BloodBankID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address"></label>
            <textarea asp-for="Address" class="form-control" required></textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <!-- Updated Buttons -->
        <div class="btn-group">
            <button type="submit" class="btn btn-submit">
                <i class="fas fa-save"></i> Save
            </button>
            <a href="@Url.Action("Index")" class="btn btn-cancel">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>

<style>
    /* Page Title */
    .page-title {
        text-align: center;
        color: white;
        background-color: darkred;
        padding: 12px;
        border-radius: 8px;
        font-size: 1.6rem;
        font-weight: bold;
        letter-spacing: 1px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
    }

    /* Content Box */
    .content-box {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
        border-left: 5px solid darkred;
    }

    /* Form Group */
    .form-group {
        margin-bottom: 14px;
    }

        .form-group label {
            font-weight: 600;
            color: #444;
            display: block;
            margin-bottom: 5px;
        }

        .form-group .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 1rem;
            transition: all 0.3s ease-in-out;
        }

            .form-group .form-control:focus {
                border-color: darkred;
                box-shadow: 0 0 5px rgba(139, 0, 0, 0.3);
                outline: none;
            }

    /* Button Group */
    .btn-group {
        display: flex;
        justify-content: center;
        gap: 12px;
        margin-top: 18px;
    }

    /* Updated Buttons */
    .btn {
        padding: 10px 16px;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 6px;
        text-transform: uppercase;
        transition: all 0.3s ease-in-out;
        text-decoration: none;
        text-align: center;
        display: flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        border: none;
        box-shadow: 2px 3px 8px rgba(0, 0, 0, 0.15);
    }

    .btn-submit {
        background-color: darkred;
        color: white;
    }

        .btn-submit:hover {
            background-color: #a40000;
            transform: scale(1.05);
        }

    .btn-cancel {
        background-color: #6c757d;
        color: white;
    }

        .btn-cancel:hover {
            background-color: #5a6268;
            transform: scale(1.05);
        }

    /* Icons in Buttons */
    .btn i {
        font-size: 1.2rem;
    }
</style>