@model BloodBankManagementSystem.Models.Hospital

<h2 class="page-title">Delete Hospital</h2>

<div class="content-box">
    <h3 class="text-danger">Are you sure you want to delete this hospital?</h3>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>City:</strong> @Model.City</p>
    <p><strong>Contact:</strong> @Model.Contact</p>
    <p><strong>Address:</strong> @Model.Address</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="HospitalID" />

    <div class="button-group">
        <button type="submit" class="btn delete-btn">Delete</button>
        <a href="@Url.Action("Index")" class="btn cancel-btn">Cancel</a>
    </div>
</form>

<!-- ✅ Styling (BloodLink Theme, Optimized Button Spacing) -->
<style>
    /* Page Title */
    .page-title {
        text-align: center;
        color: white;
        background: #8B0000;
        padding: 14px;
        border-radius: 6px;
        font-size: 1.7rem;
        font-weight: bold;
        letter-spacing: 0.8px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
    }

    /* Content Box */
    .content-box {
        background: white;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
        border-left: 5px solid #8B0000;
    }

    /* Button Group - Keep Buttons Closer */
    .button-group {
        display: flex;
        justify-content: center;
        gap: 10px; /* Adjust spacing between buttons */
        margin-top: 20px;
    }

    /* Delete Button */
    .delete-btn {
        background: #8B0000;
        color: white;
        font-weight: 600;
        padding: 10px 18px;
        border-radius: 6px;
        text-transform: uppercase;
        border: none;
        transition: all 0.3s ease-in-out;
    }

        .delete-btn:hover {
            background: #6e0000;
            transform: scale(1.05);
        }

    /* Cancel Button */
    .cancel-btn {
        background: #333;
        color: white;
        font-weight: 600;
        padding: 10px 18px;
        border-radius: 6px;
        text-transform: uppercase;
        border: none;
        transition: all 0.3s ease-in-out;
        text-decoration: none;
    }

        .cancel-btn:hover {
            background: #222;
            transform: scale(1.05);
        }
</style>