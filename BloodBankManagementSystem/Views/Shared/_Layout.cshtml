<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BloodLink</title>

    <!-- Bootstrap & FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <style>
        body{
            background: url(/images/BloodLink.jpg) no-repeat center center fixed;
            background-size:cover;
        }

        .sidebar {
            width: 180px;
            height: 100vh;
            background: rgba(0, 67, 67, 1);
            /* background: #0a3d62; */
            position: fixed;
            left: 0;
            top: 0;
            padding-top: 20px;
            box-shadow: 4px 0 12px rgba(0, 0, 0, 0.7);
            transition: width 0.3s ease-in-out;
            overflow: hidden;
        }

            .sidebar.collapsed {
                width: 60px;
            }

            .sidebar h5 {
                font-size: 1.5rem;
                color: #d1d1d1;
                text-align: center;
                margin-bottom: 20px;
                font-weight: bold;
                letter-spacing: 1px;
                transition: opacity 0.3s ease-in-out;
            }

            .sidebar.collapsed h5 {
                opacity: 0;
            }

            .sidebar .menu-btn {
                display: flex;
                align-items: center;
                font-size: 1rem;
                font-weight: 600;
                color: white;
                background: rgba(152, 255, 255, 0.1);
                border-radius: 8px;
                padding: 12px;
                margin: 10px;
                text-decoration: none;
                transition: all 0.3s ease-in-out;
                white-space: nowrap;
            }

                .sidebar .menu-btn i {
                    width: 30px;
                    text-align: center;
                    transition: all 0.3s ease-in-out;
                }

            .sidebar.collapsed .menu-btn span {
                display: none;
            }

            .sidebar .menu-btn:hover{
                background: rgba(255, 255, 255, 0.2);
                transform:scale()1.05;
            }

        .navbar-custom {
            background: #1e272e;
            /* background: linear-gradient(to right, #B22222, #8B0000); */
            color: #dcdcdc;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

            .navbar-custom .navbar-brand {
                font-weight: bold;
                font-size: 1.5rem;
                color: white;
            }

        .content {
            margin-left: 220px;
            padding: 20px;
            transition: margin-left 0.3s ease-in-out;
        }

            .content.collapsed {
                margin-left: 60px;
            }
    </style>
</head>
<body>

    @if (Context.Session.GetInt32("UserID") != null)
    {
        <div class="sidebar" id="sidebar">
            <h5><i class="fas fa-tint"></i> <span>BloodLink</span></h5>

            <a href="/Home/Index" class="menu-btn">
                <i class="fas fa-chart-bar"></i> <span>Dashboard</span>
            </a>

            <a href="/BloodBank/Index" class="menu-btn">
                <i class="fas fa-university"></i> <span>Blood Bank</span>
            </a>

            <a href="/BloodDonationCamp/Index" class="menu-btn">
                <i class="fas fa-hand-holding-medical"></i> <span>Donation Camp</span>
            </a>

            <a href="/BloodDonor/Index" class="menu-btn">
                <i class="fas fa-user"></i> <span>Donors</span>
            </a>

            <a href="/Hospital/Index" class="menu-btn">
                <i class="fas fa-hospital"></i> <span>Hospitals</span>
            </a>

            <a href="/BloodInventory/Index" class="menu-btn">
                <i class="fas fa-archive"></i> <span>Inventory</span>
            </a>

            <a href="/Account/Logout" class="menu-btn">
                <i class="fas fa-sign-out-alt"></i> <span>Logout</span>
            </a>
        </div>
    }

    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid">
            @if (Context.Session.GetInt32("UserID") != null)
            {
                <button class="btn btn-light me-3" id="toggleSidebar">
                    <i class="fas fa-bars"></i>
                </button>
            }

            <a class="navbar-brand">BloodLink</a>

            @if (Context.Session.GetInt32("UserID") != null)
            {
                <form class="d-flex ms-auto" method="get" action="/Search/SearchDonors">
                    <input class="form-control search-bar" type="text" name="query" placeholder="Search donors..." required>
                    <button class="btn btn-light ms-2" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </form>

                <span class="ms-3 text-white">Hello, @Context.Session.GetString("UserName")</span>
            }
        </div>
    </nav>

    <div class="content" id="mainContent">
        <div class="container mt-4">
            @RenderBody()
        </div>
    </div>

    <script sec="~/js/dateValidation.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let sidebar = document.getElementById("sidebar");
            let content = document.getElementById("mainContent");

            let isCollapsed = localStorage.getItem("sidebarCollapsed") === "true";

            if (isCollapsed) {
                sidebar.classList.add("collapsed");
                content.classList.add("collapsed");
            }

            // Sidebar Toggle Function
            document.getElementById("toggleSidebar")?.addEventListener("click", function (event) {
                event.stopPropagation();
                sidebar.classList.toggle("collapsed");
                content.classList.toggle("collapsed");

                // Save state to localStorage
                localStorage.setItem("sidebarCollapsed", sidebar.classList.contains("collapsed"));
            });

            // Prevent auto-uncollapse on menu item click
            sidebar?.addEventListener("click", function (event) {
                event.stopPropagation();
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
