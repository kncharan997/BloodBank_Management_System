@model BloodBankManagementSystem.Models.BloodBank
@{
    ViewData["Title"] = "Delete Blood Bank";
}

<h2 class="page-title">Delete Blood Bank</h2>

<div class="content-box">
    <p class="warning-text">Are you sure you want to delete this blood bank?</p>

    <div class="details-box">
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>City:</strong> @Model.City</p>
        <p><strong>Contact:</strong> @Model.Contact</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BloodBankID" />

        <div class="button-group">
            <button type="submit" class="btn action-btn delete-btn">Delete</button>
            <a href="@Url.Action("Index", "BloodBank")" class="btn action-btn cancel-btn">Cancel</a>
        </div>
    </form>
</div>

<!-- 🔹 CSS Styling -->
<style>
    /* Page Title */
    .page-title {
        text-align: center;
        color: white;
        background: linear-gradient(135deg, #007a7a, #004d4d);
        padding: 14px;
        border-radius: 8px;
        font-size: 1.8rem;
        font-weight: bold;
        letter-spacing: 1px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
    }

    /* Main Content Box */
    .content-box {
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.12);
        margin-top: 25px;
        max-width: 550px;
        margin-left: auto;
        margin-right: auto;
        border-left: 5px solid #007a7a;
        text-align: center;
    }

    /* Warning Text */
    .warning-text {
        color: #d32f2f;
        font-size: 1.2rem;
        font-weight: bold;
        margin-bottom: 15px;
    }

    /* Details Box */
    .details-box {
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        margin: 20px 0;
        text-align: left;
        border-left: 4px solid #007a7a;
    }

    /* Button Group */
    .button-group {
        display: flex;
        justify-content: center;
        gap: 12px;
        margin-top: 20px;
    }

    /* Buttons */
    .action-btn {
        padding: 10px 18px;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 8px;
        text-transform: uppercase;
        transition: all 0.3s ease-in-out;
        text-decoration: none;
        text-align: center;
        display: inline-block;
        cursor: pointer;
        border: none;
        box-shadow: 2px 3px 8px rgba(0, 0, 0, 0.15);
    }

    /* Delete Button */
    .delete-btn {
        background: linear-gradient(135deg, #d32f2f, #b71c1c);
        color: white;
    }

        .delete-btn:hover {
            background: linear-gradient(135deg, #b71c1c, #8b0000);
            transform: scale(1.05);
        }

    /* Cancel Button */
    .cancel-btn {
        background: linear-gradient(135deg, #007a7a, #004d4d);
        color: white;
    }

        .cancel-btn:hover {
            background: linear-gradient(135deg, #005f5f, #003b3b);
            transform: scale(1.05);
        }
</style>