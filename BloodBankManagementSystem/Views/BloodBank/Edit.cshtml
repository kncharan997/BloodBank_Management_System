@model BloodBankManagementSystem.Models.BloodBank
@{
    ViewData["Title"] = "Edit Blood Bank";
}

<h2 class="page-title"><i class="fas fa-edit"></i> Edit Blood Bank</h2>

<div class="content-box">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="BloodBankID" />

        <div class="form-group">
            <label class="form-label">Blood Bank Name:</label>
            <input asp-for="Name" class="form-control input-field" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label">City:</label>
            <select asp-for="City" class="form-control input-field" required>
                <option value="">Select City</option>
                <option value="Mumbai" selected="@(Model.City == "Mumbai" ? "selected" : null)">Mumbai</option>
                <option value="Delhi" selected="@(Model.City == "Delhi" ? "selected" : null)">Delhi</option>
                <option value="Bangalore" selected="@(Model.City == "Bangalore" ? "selected" : null)">Bangalore</option>
                <option value="Hyderabad" selected="@(Model.City == "Hyderabad" ? "selected" : null)">Hyderabad</option>
                <option value="Chennai" selected="@(Model.City == "Chennai" ? "selected" : null)">Chennai</option>
                <option value="Kolkata" selected="@(Model.City == "Kolkata" ? "selected" : null)">Kolkata</option>
                <option value="Pune" selected="@(Model.City == "Pune" ? "selected" : null)">Pune</option>
                <option value="Ahmedabad" selected="@(Model.City == "Ahmedabad" ? "selected" : null)">Ahmedabad</option>
                <option value="Jaipur" selected="@(Model.City == "Jaipur" ? "selected" : null)">Jaipur</option>
                <option value="Surat" selected="@(Model.City == "Surat" ? "selected" : null)">Surat</option>
            </select>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label">Contact:</label>
            <input asp-for="Contact" class="form-control input-field" required />
            <span asp-validation-for="Contact" class="text-danger"></span>
        </div>

        <div class="btn-group">
            <button type="submit" class="btn save-btn"><i class="fas fa-save"></i> Update</button>
            <a href="@Url.Action("Index", "BloodBank")" class="btn cancel-btn"><i class="fas fa-times"></i> Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

