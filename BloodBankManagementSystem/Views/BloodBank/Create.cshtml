@model BloodBankManagementSystem.Models.BloodBank
@{
    ViewData["Title"] = "Add Blood Bank";
}

<h2 class="page-title"><i class="fas fa-clinic-medical"></i> Add Blood Bank</h2>

<div class="content-box">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name" class="form-label">Blood Bank Name:</label>
            <input asp-for="Name" class="form-control input-field" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="City" class="form-label">City:</label>
            <input asp-for="City" class="form-control input-field" required />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Contact" class="form-label">Contact:</label>
            <input asp-for="Contact" class="form-control input-field" required />
            <span asp-validation-for="Contact" class="text-danger"></span>
        </div>

        <div class="button-group">
            <button type="submit" class="btn action-btn add-btn"><i class="fas fa-save"></i> Save</button>
            <a href="@Url.Action("Index", "BloodBank")" class="btn action-btn delete-btn"><i class="fas fa-times"></i> Cancel</a>
        </div>
    </form>
</div>

<!-- 🔹 CSS Styling -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f4f4f4;
    }

    .page-title {
        text-align: center;
        background: rgb(0, 67, 67);
        color: white;
        padding: 16px;
        border-radius: 8px;
        font-size: 1.8rem;
        font-weight: bold;
        letter-spacing: 1px;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
    }

    .content-box {
        background-color: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        width: 400px;
        margin-left: auto;
        margin-right: auto;
    }

    .form-label {
        font-weight: 600;
        color: rgb(0, 67, 67);
        margin-bottom: 5px;
        display: block;
    }

    .input-field {
        border: 2px solid #ddd;
        padding: 12px;
        border-radius: 6px;
        width: 100%;
        font-size: 1rem;
        transition: 0.3s;
    }

        .input-field:focus {
            border-color: rgb(0, 67, 67);
            box-shadow: 0 0 6px rgba(0, 67, 67, 0.3);
        }

    .button-group {
        display: flex;
        justify-content: space-between;
        margin-top: 15px;
    }

    .action-btn {
        padding: 12px 18px;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 6px;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: 0.3s;
        border: none;
        cursor: pointer;
    }

    .add-btn {
        background: rgb(0, 67, 67);
        color: white;
    }

        .add-btn:hover {
            background: rgb(0, 55, 55);
        }

    .delete-btn {
        background: #D32F2F;
        color: white;
    }

        .delete-btn:hover {
            background: #B71C1C;
        }
</style>