@model BloodBankManagementSystem.Models.BloodDonationCamp

<h2 class="page-title">Edit Blood Donation Camp</h2>

<div class="content-box">
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="BloodDonationCampID" />

        <div class="form-group">
            <label asp-for="CampName"></label>
            <input asp-for="CampName" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="City"></label>
            <select asp-for="City" class="form-control" required>
                <option value="">Select City</option>
                <option value="Mumbai">Mumbai</option>
                <option value="Delhi">Delhi</option>
                <option value="Bangalore">Bangalore</option>
                <option value="Hyderabad">Hyderabad</option>
                <option value="Chennai">Chennai</option>
                <option value="Kolkata">Kolkata</option>
                <option value="Pune">Pune</option>
                <option value="Ahmedabad">Ahmedabad</option>
                <option value="Jaipur">Jaipur</option>
                <option value="Surat">Surat</option>
            </select>
        </div>

        <div class="form-group">
            <label for="CampStartDate">Start Date</label>
            <input type="date" id="campStartDate" name="CampStartDate" class="form-control" asp-for="CampStartDate" required />
            <span asp-validation-for="CampStartDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="CampEndDate">End Date</label>
            <input type="date" id="campEndDate" name="CampEndDate" class="form-control" asp-for="CampEndDate" required />
            <span asp-validation-for="CampEndDate" class="text-danger"></span>
        </div>

        <div class="btn-group">
            <button type="submit" class="btn btn-primary">Update Camp</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function(){
            $("#campStartDate").on("change",function(){
                let startDate = new Date($(this).val());
                let today = new Date();
                today.setHours(0,0,0,0);
                if (startDate <= today) {
                    alert("Start Date must be beyond Today");
                    $(this).val('');
                }
            });

            $("#campEndDate").on("change",function(){
                let startDate = new Date($("#campStartDate").val());
                let endDate = new Date($(this).val());
                if (endDate < startDate) {
                    alert("End Date must be beyond start date");
                    $(this).val('');
                }
            });
        });
    </script>
}

