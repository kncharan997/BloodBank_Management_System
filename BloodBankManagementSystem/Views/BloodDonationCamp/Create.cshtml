@model BloodBankManagementSystem.Models.BloodDonationCamp

<h2 class="page-title">Arrange Blood Donation Camp</h2>

<div class="content-box">
    <form method="post">
        <div class="form-group">
            <label asp-for="CampName">Camp Name</label>
            <input asp-for="CampName" class="form-control" required />
            <span asp-validation-for="CampName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address">Address</label>
            <input asp-for="Address" class="form-control" required />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="City">City</label>
            <select asp-for="City" class="form-control" required>
                <option value="">Select City</option>
                @foreach (var city in new[] { "Mumbai", "Delhi", "Bangalore", "Hyderabad", "Chennai", "Kolkata", "Pune", "Ahmedabad", "Jaipur", "Surat" })
                {
                    <option value="@city">@city</option>
                }
            </select>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BloodBankID">Blood Bank</label>
            <select asp-for="BloodBankID" class="form-control" required>
                <option value="">-- Select Blood Bank --</option>
                @foreach (var bloodBank in ViewBag.BloodBanks)
                {
                    <option value="@bloodBank.BloodBankID">@bloodBank.Name</option>
                }
            </select>
            <span asp-validation-for="BloodBankID" class="text-danger"></span>
        </div>

        <!-- Start Date and End Date -->
        <div class="form-group date-group">
            <div>
                <label asp-for="CampStartDate">Start Date</label>
                <input type="date" id="campStartDate" asp-for="CampStartDate" class="form-control" required />
                <span asp-validation-for="CampStartDate" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="CampEndDate">End Date</label>
                <input type="date" id="campEndDate" asp-for="CampEndDate" class="form-control" required />
                <span asp-validation-for="CampEndDate" class="text-danger"></span>
            </div>
        </div>

        <!-- Buttons -->
        <div class="btn-group">
            <button type="submit" class="btn btn-submit">
                <i class="fas fa-check-circle"></i> Arrange Camp
            </button>
            <a href="@Url.Action("Index")" class="btn btn-cancel">
                <i class="fas fa-times-circle"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const startDateInput = document.getElementById("campStartDate");
            const endDateInput = document.getElementById("campEndDate");

            startDateInput.addEventListener("change", function () {
                let startDate = new Date(this.value);
                let today = new Date();
                today.setHours(0, 0, 0, 0);

                if (startDate < today) {
                    alert("Start Date must be today or a future date.");
                    this.value = '';
                }
            });

            endDateInput.addEventListener("change", function () {
                let startDate = new Date(startDateInput.value);
                let endDate = new Date(this.value);

                if (!startDateInput.value) {
                    alert("Please select the Start Date first.");
                    this.value = '';
                    return;
                }

                if (endDate < startDate) {
                    alert("End Date must be after Start Date.");
                    this.value = '';
                }
            });
        });
    </script>
}

